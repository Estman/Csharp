diskutil erasevolume HFS+ raffpioII `hdiutil attach -nomount ram://500000`;
sudo rm -Rf System/Library/Caches;
mkdir /Volumes/raffpioII/Caches;
sudo ln -s /Volumes/raffpioII/Caches /System/Lib



